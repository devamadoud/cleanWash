{% extends 'fullyAuthLayout.html.twig' %}
{% form_theme filterForm 'form/theme.html.twig' %}

{% block title %}
  Commandes
{% endblock %}

{% block body %}
  <div class="customer-index flex min-h-full flex-col w-full justify-center mx-auto lg:px-8">
    <div class="w-full px-4 py-8 md:px-8 mx-auto">
    
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
          <li class="inline-flex items-center">
            <a href="{{ path('home') }}" class="inline-flex gap-1 items-center text-sm font-medium text-gray-700 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
              </svg>
              <span>Dashboard</span>
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <a href="{{ path('payment.collecte') }}" class="inline-flex gap-1 items-center text-sm font-medium text-gray-700 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white">
                <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
                </svg>
                <span>Paiements</span>
              </a>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
              </svg>
              <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400 dark:hover:text-white">Collectes</span>
            </div>
          </li>
        </ol>
      </nav>

      <div class="flex justify-between md:justify-end">
        <button data-modal-target="popup-modal" data-modal-toggle="popup-modal" class="flex gap-1 md:text-md text-sm px-4 py-2 text-white duration-150 font-medium border bg-purple-700 rounded-lg hover:bg-purple-800 whitespace-nowrap" rel="nofollow">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 mr-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          <span>Encaisser un paiement</span>
        </button>

        <div id="popup-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
          <div class="relative p-4 w-full max-w-md max-h-full">
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
              <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="popup-modal">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                </svg>
                <span class="sr-only">Close modal</span>
              </button>
              <div class="p-4 md:p-5 text-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mx-auto mb-4 text-purple-500 w-12 h-12 dark:text-gray-200">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z" />
                </svg>
                <form action="{{ path('payment.index') }}" method="post" class="flex flex-col gap-2">
                  <div class="flex flex-col gap-1 w-3/4 mx-auto">
                    <label for="collecte" class="text-md font-normal text-gray-800 dark:text-gray-400">Référence de la collecte ou de la commande.</label>
                    <input type="number" name="ref" id="ref" placeholder="# Référence :" required class="block w-full rounded-md border border-gray-300 bg-white px-2 py-2 text-xs text-gray-700 placeholder-gray-400 font-medium focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50">
                  </div>
                  <p class="mt-2 text-sm font-normal text-gray-800 dark:text-gray-400">Pour quel service allez-vous efféctuer un encaissement ?</p>
                  <div class="flex gap-4 justify-center">
                    <div class="flex gap-1 justify-center px-3 py-2 rounded border bg-gray-100 hover:bg-gray-200 focus:border-purple-600 cursor-pointer">
                      <input type="radio" name="type" id="pressing" value="pressing" required class="text-purple-700">
                      <label for="pressing" class="text-sm font-normal text-gray-600 dark:text-gray-400 cursor-pointer">Collecte de pressing</label>
                    </div>
                    <div class="flex gap-1 justify-center px-3 py-2 rounded border bg-gray-100 hover:bg-gray-200 focus:border-purple-600 cursor-pointer">
                      <input type="radio" name="type" id="product" value="product" required class="text-purple-700" >
                      <label for="product" class="text-sm font-normal text-gray-600 dark:text-gray-400 cursor-pointer">Comande de produit</label>
                    </div>
                  </div>
                  <div class="flex gap-4 justify-center">
                    <button data-modal-hide="popup-modal" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-purple-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">Retour</button>    
                    <button type="submit" class="text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center">Valider</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

      </div>
      <div class="mt-5 shadow-sm border rounded-lg overflow-x-auto">
        <table class="w-full table-auto text-sm text-left">
          <thead class="bg-gray-50 text-purple-900 font-medium border-b">
            <tr>
              <th colspan="9" class="py-2 px-4">
                <div class="flex flex-col">
                  <div class="rounded-xl p-4">
                    {{ form_start(filterForm, { attr: { id: 'filterForm' } }) }}

                    <div class="flex gap-4">
                      <div class="flex flex-col">{{ form_widget(filterForm.ref, { widget_class: 'block w-full rounded-md border border-gray-300 bg-white px-2 py-2 text-xs text-gray-700 placeholder-gray-400 font-medium focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50' }) }}</div>

                      <div class="flex flex-col">{{ form_widget(filterForm.tel, { widget_class: 'block w-full rounded-md border border-gray-300 bg-white px-2 py-2 text-xs text-gray-700 placeholder-gray-400 font-medium focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50' }) }}</div>

                      <div class="flex flex-col">
                        <div date-rangepicker class="flex items-center">
                          <div class="relative">
                            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                              <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                              </svg>
                            </div>
                            {{ form_widget(filterForm.dateFrom, { attr: { 'datepicker-title': 'Debut' }, widget_class: 'bg-white border border-gray-200 text-gray-900 text-xs placeholder-gray-600 text-gray-700 rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full ps-10 px-2 py-2  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500' }) }}
                          </div>
                          <span class="mx-4 text-gray-500">à</span>
                          <div class="relative">
                            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                              <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                              </svg>
                            </div>
                            {{ form_widget(filterForm.dateTo, { attr: { 'datepicker-title': 'Fin' }, widget_class: 'bg-white border border-gray-200 text-gray-900 text-xs placeholder-gray-600 text-gray-700 rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full ps-10 px-2 py-2  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500' }) }}
                          </div>
                        </div>
                      </div>

                      <div class="flex flex-col">{{ form_widget(filterForm.status, { widget_class: 'block w-full rounded-md border border-gray-300 bg-white px-2 py-2 text-xs text-gray-700 placeholder-gray-400 font-medium focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50' }) }}</div>

                      <div class="flex flex-col justify-end">
                        <div class="flex gap-4">
                          <button type="submit" class="inline-flex rounded-md bg-purple-600 px-8 py-2 font-medium text-white outline-none hover:opacity-80 focus:ring">Filtrer</button>
                          <button type="submit" name="reset" value="cancel" class="rounded-md bg-gray-200 border border-gray-300 px-8 py-2 font-medium text-gray-700 outline-none hover:opacity-80 focus:ring">Reset</button>
                        </div>
                      </div>
                    </div>
                    {{ form_end(filterForm) }}
                  </div>
                </div>
              </th>
            </tr>
            <tr>
              <th class="py-3 px-6">Collecte</th>
              <th class="py-3 px-6">Nom du client</th>
              <th class="py-3 px-6">Téléfone</th>
              <th class="py-3 px-6">Mode de paiement</th>
              <th class="py-3 px-6">Date</th>
              <th class="py-3 px-6">Status</th>
              <th class="py-3 px-6">Caissier</th>
              <th class="py-3 px-6">Totale</th>
            </tr>
          </thead>
          <tbody class="text-gray-600 divide-y bg-white">
            {% for payment in payments %}
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  #<a href="{{ path('collecte.show', { id: payment.collecte.id }) }}" class="text-purple-700 hover:underline">{{ payment.collecte.reference }}</a>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <a href="{{ path('customer.show', { id: payment.collecte.customer.id }) }}" class="text-purple-700 hover:underline"></a> {{ payment.collecte.customer.fullName }}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">{{ payment.collecte.customer.phoneNumber }}</td>
                <td class="px-6 py-4 whitespace-nowrap">{{ payment.paimentMode }}</td>
                <td class="px-6 py-4 whitespace-nowrap">{{ payment.collecte.payedAt|format_datetime(locale='fr') }}</td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 py-1 text-sm whitespace-nowrap {{ payment.confirmation == true ? 'text-green-800 bg-green-300' : 'text-yellow-800 bg-yellow-200' }} rounded-md">{{ payment.confirmation == true ? 'Validé' : 'En attente' }}</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">{{ payment.cashedBy }}</td>
                <td class="px-6 py-4 whitespace-nowrap">{{ payment.amount }}</td>
              </tr>
            {% else %}
              <tr>Vous n'avez aucune encaissement</tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <div class="w-full mt-5 flex justify-center contents-center">{{ knp_pagination_render(payments) }}</div>
    </div>
  </div>
{% endblock %}