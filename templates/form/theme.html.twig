{% use 'tailwind_2_layout.html.twig' %}

{% block form_row %}
    {% set row_class = row_class|default('') %}
    {{ parent() }}
{% endblock form_row %}

{% block form_label %}
    {% set label_class = label_class|default('block text-sm font-medium leading-6 text-gray-900') %}
    {{ parent() }}
{% endblock form_label %}

{% block form_widget %}
    {% set widget_class = widget_class|default('block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6') %}
    {{ parent() }}
{% endblock form_widget %}