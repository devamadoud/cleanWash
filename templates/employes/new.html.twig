{% extends 'fullyAuthLayout.html.twig' %}

{% block title %}
  Hello EmployesController!
{% endblock %}
{% form_theme form 'tailwind_2_layout.html.twig' %}

{% block body %}
  <div class="employe-index flex min-h-full flex-col justify-center mx-auto lg:px-8">
    <div class="max-w-screen-xl px-4 py-8 md:px-8">
      <div class="items-start justify-between md:flex border-b pb-6 text-gray-600">
        <div class="max-w-lg">
          <h3 class="text-gray-800 text-xl font-bold sm:text-2xl">Ajouter un employé à votre liste de recrut</h3>
          <p class="text-gray-600 mt-2">Ajoutez un membre à votre équipe pour plus de rigeur et d'équilibre dans le repatissement du travail à faire.</p>
        </div>
        <div class="mt-3 md:mt-0">
          <a href="{{ path('employes.index') }}" class="flex px-4 py-2 w-max border border-gray-300 text-purple-600 duration-150 font-medium bg-gray-50 rounded-lg hover:bg-gray-100 md:text-sm" rel="nofollow">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-arrow-left h-5 self-center mr-2" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
            </svg>Retour à la liste des employés
          </a>
        </div>
      </div>
      <div class="w-64 mx-auto">
        {{ form_start(form) }}
        {{ form_row(form.phoneNumber, { row_class: 'mt-2', label_class: 'block text-sm font-medium leading-6 text-gray-900 mt-3', error_item_class: 'text-red-500 text-sm font-medium', widget_class: 'block w-full mt-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6', widget_disabled_class: 'my disabled widget classes', widget_errors_class: 'ring-1 ring-inset ring-orange-600' }) }}
        {{ form_row(form.emPoste, { row_class: 'mt-2', label_class: 'block text-sm font-medium leading-6 text-gray-900 mt-3', error_item_class: 'text-red-500 text-sm font-medium', widget_class: 'block w-full mt-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6', widget_disabled_class: 'my disabled widget classes', widget_errors_class: 'ring-1 ring-inset ring-orange-600' }) }}
        {% if employe_user is defined and employe_user != null %}
          {{ form_row(form.employe, { attr: { value: employe_user.id } }) }}
          <div>
            {{ employe_user.fullName }}
            <button type="submit" class="text-white mt-5 bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:bg-purple-600 dark:hover:bg-purple-700 focus:outline-none dark:focus:ring-purple-800">Ajouter</button>
          </div>
        {% else %}
          {{ form_row(form.employe) }}
          <button type="submit" class="text-white mt-5 bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:bg-purple-600 dark:hover:bg-purple-700 focus:outline-none dark:focus:ring-purple-800">Rechercher</button>
        {% endif %}
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}
