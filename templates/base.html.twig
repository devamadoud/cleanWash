<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<title>
			{% block title %}
				Setsetal-Service
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('/images/icons/48x48-SSSLogo.png') }}"/> {% block stylesheets %}{% endblock %}
    <link rel="manifest" href="{{ asset('/manifest.json') }}">

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body class="min-h-svh">

		<header class="z-40 sticky top-0 left-0 w-full">
			{% include 'nav/_navbar.html.twig' %}
			<div id="installBanner" style="display: none;" class="fixed bottom-0 left-0 right-0 bg-purple-600 text-white p-4 z-50">
				<div class="container mx-auto flex justify-between items-center">
					<p class="text-sm">Installez notre application pour une meilleure exp√©rience !</p>
					<div>
						<button id="installButton" class="bg-white text-purple-600 px-4 py-2 rounded-lg mr-2">Installer</button>
						<button id="closeBannerButton" class="text-white">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
							</svg>
						</button>
					</div>
				</div>
			</div>

		</header>

		<main class="{{ app.current_route == 'home' ? "bg-white" : "bg-purple-50" }} min-h-svh z-30">
			<div class="flex flex-col w-full mx-auto">
				{% for message in app.flashes('success') %}
					<div class="flex mt-4 self-center items-center p-4 mb-4 text-sm w-4/5 md:w-2/4 text-green-800 border border-green-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 dark:border-green-800" role="alert">
						<svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
							<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
						</svg>
						<span class="sr-only">Info</span>
						<div>
							<span class="font-medium">{{ message }}</span>
						</div>
					</div>
				{% endfor %}

				{% for message in app.flashes('warning') %}
					<div class="flex mt-4 self-center items-center p-4 mb-4 text-sm w-4/5 md:w-2/4 text-yellow-800 border border-yellow-300 rounded-lg bg-yellow-50 dark:bg-gray-800 dark:text-yellow-300 dark:border-yellow-800" role="alert">
						<svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
							<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
						</svg>
						<span class="sr-only">Info</span>
						<div>
							<span class="font-medium">{{ message }}</span>
						</div>
					</div>
				{% endfor %}

				{% for message in app.flashes('error') %}
					<div class="flex mt-4 self-center items-center w-4/5 md:w-2/4 p-4 mb-4 text-sm text-orange-800 border border-orange-300 rounded-lg bg-orange-50 dark:bg-gray-800 dark:text-orange-400 dark:border-orange-800" role="alert">
						<svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
							<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
						</svg>
						<span class="sr-only">Info</span>
						<div class="">
							<span class="font-medium">{{ message }}</span>
						</div>
					</div>
				{% endfor %}

				{% for message in app.flashes('infos') %}
					<div class="flex mt-4 self-center items-center p-4 mb-4 text-sm w-4/5 md:w-2/4 text-skyblue-800 border border-skyblue-300 rounded-lg bg-skyblue-50 dark:bg-gray-800 dark:text-skyblue-400 dark:border-skyblue-800" role="alert">
						<svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
							<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
						</svg>
						<span class="sr-only">Info</span>
						<div>
							<span class="font-medium">{{ message }}</span>
						</div>
					</div>
				{% endfor %}

				{% for message in app.flashes('astuce') %}
					<div class="flex mt-4 self-center items-center p-4 text-sm w-4/5 md:w-2/4 text-gray-800 border border-gray-300 rounded-lg bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600" role="alert">
						<svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
							<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
						</svg>
						<span class="sr-only">Info</span>
						<div>
							<span class="font-medium">{{ message }}</span>
						</div>
					</div>
				{% endfor %}
			</div>
			{% block cta %}{% endblock %}
			<div class="container items-center px-2 max-w-screen-xl mx-auto md:px-8 {{ app.user ? 'md:ml-64' : '' }}">
				<div>
					{% block body %}{% endblock %}
				</div>
			</div>
		</main>
		<footer class="p-4 bg-purple-100">
			{% include 'nav/_footer.html.twig' %}
		</footer>
	</body>
</html>
