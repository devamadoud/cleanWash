{% extends 'fullyAuthLayout.html.twig' %}


{% block title %}
  Commandes
{% endblock %}

{% block body %}
  <div class="customer-index flex min-h-full w-full flex-col justify-center mx-auto lg:px-8">
    <div class="max-w-full w-full px-4 py-4 md:px-8 mx-auto">

      <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
          <li class="inline-flex items-center">
            <a href="{{ path('home') }}" class="inline-flex gap-1 items-center text-sm font-medium text-gray-700 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
              </svg>
              <span>Dashboard</span>
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
              </svg>
              <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400 dark:hover:text-white">Produits</span>
            </div>
          </li>
        </ol>
      </nav>

      <div class="w-full flex justify-end">
        <a href="{{ path('product.add') }}" class="flex items-center w-auto p-2 bg-purple-800 hover:bg-purple-700 text-white rounded-lg dark:text-white dark:hover:bg-gray-700 group">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
            <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
          </svg>
          <span class="flex-1 ms-3 text-left rtl:text-right whitespace-nowrap">Ajouter un produit</span>
        </a>
      </div>
      <div class="bg-white mt-5 w-full shadow-lg border rounded-lg overflow-x-auto overflow-y-hidden">
        <table class="w-full table-auto text-sm text-left">
          <thead class="bg-gray-50 text-purple-900 font-medium border-b">
            <tr>
              <th colspan="9" class="py-2 px-4">
                <div class="flex flex-col">
                  <div class="rounded-xl p-4">
                    {#}{{ form_start(filterForm, { attr: { id: 'filterForm' } }) }}

                    <div class="flex gap-4">
                      <div class="flex flex-col">{{ form_widget(filterForm.ref, { widget_class: 'block w-full rounded-md border border-gray-300 bg-white px-2 py-2 text-xs text-gray-700 placeholder-gray-400 font-medium focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50' }) }}</div>

                      <div class="flex flex-col">{{ form_widget(filterForm.tel, { widget_class: 'block w-full rounded-md border border-gray-300 bg-white px-2 py-2 text-xs text-gray-700 placeholder-gray-400 font-medium focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50' }) }}</div>

                      <div class="flex flex-col">
                        <div date-rangepicker class="flex items-center">
                          <div class="relative">
                            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                              <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                              </svg>
                            </div>
                            {{ form_widget(filterForm.dateFrom, { attr: { 'datepicker-title': 'Debut' }, widget_class: 'bg-white border border-gray-200 text-gray-900 text-xs placeholder-gray-600 text-gray-700 rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full ps-10 px-2 py-2  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500' }) }}
                          </div>
                          <span class="mx-4 text-gray-500">à</span>
                          <div class="relative">
                            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                              <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                              </svg>
                            </div>
                            {{ form_widget(filterForm.dateTo, { attr: { 'datepicker-title': 'Fin' }, widget_class: 'bg-white border border-gray-200 text-gray-900 text-xs placeholder-gray-600 text-gray-700 rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full ps-10 px-2 py-2  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500' }) }}
                          </div>
                        </div>
                      </div>

                      <div class="flex flex-col">{{ form_widget(filterForm.status, { widget_class: 'block w-full rounded-md border border-gray-300 bg-white px-2 py-2 text-xs text-gray-700 placeholder-gray-400 font-medium focus:border-purple-500 focus:ring focus:ring-purple-200 focus:ring-opacity-50' }) }}</div>

                      <div class="flex flex-col justify-end">
                        <div class="flex gap-4">
                          <button type="submit" class="inline-flex rounded-md bg-purple-600 px-8 py-2 font-medium text-white outline-none hover:opacity-80 focus:ring">Filtrer</button>
                          <button type="submit" name="reset" value="cancel" class="rounded-md bg-gray-200 border border-gray-300 px-8 py-2 font-medium text-gray-700 outline-none hover:opacity-80 focus:ring">Reset</button>
                        </div>
                      </div>
                    </div>
                    {{ form_end(filterForm) }}{#}
                  </div>
                </div>
              </th>
            </tr>
            <tr>
              <th class="py-2 px-2">Produit</th>
              <th class="py-2 px-2">Stock</th>
              <th class="py-2">Ventes</th>
              <th class="py-2 px-2">Prix achat</th>
              <th class="py-2 px-2">Prix vente</th>
              <th class="py-2">Promo</th>
              <th class="py-2 px-2"></th>
            </tr>
          </thead>
          <tbody class="text-gray-600 divide-y bg-white">
            {% for product in products %}
              <tr>
                <td class="px-3 py-2 whitespace-nowrap text-purple-900 text-md font-medium">
                    <div class="flex gap-2 items-center">
                        <img src="{{ asset('images/uploads/products/' ~ product.productImage) }}" alt="{{ product.name }}" class="w-10 h-10 rounded-xl object-cover">
                        {{ product.name }}
                    </div>
                </td>
                <td class="px-2 py-2 whitespace-nowrap">
                  <div class="w-full">
                    {% if product.quantityStocke >= 1 and product.quantityStocke < 5 %}
                      <div class="flex gap-2 justify-between items-center px-3 py-1 rounded bg-yellow-100">
                        {{ product.quantityStocke }}
                        <span class="text-xs text-yellow-500">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                          </svg>
                        </span>
                      </div>
                    {% endif %}
                    {% if product.quantityStocke == 0 %}
                      <div class="flex gap-2 justify-between items-center px-3 py-1 rounded bg-red-100">
                        {{ product.quantityStocke }}
                        <span class="text-xs text-red-500">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
                          </svg>
                        </span>
                      </div>
                    {% endif %}
                    {% if product.quantityStocke > 5 %}
                      <div class="flex gap-2 justify-between items-center px-3 py-1 rounded bg-green-100">
                        {{ product.quantityStocke }}
                        <span class="text-xs text-green-500">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
                          </svg>
                        </span>
                      </div>
                    {% endif %}
                  </div>
                </td>
                <td class="py-2 whitespace-nowrap">{{ product.quantitySales }}</td>
                <td class="px-2 py-2 whitespace-nowrap">{{ product.purchasePrice }}</td>
                <td class="px-2 py-2 whitespace-nowrap">{{ product.price }}</td>
                <td class="py-2 whitespace-nowrap">{{ product.promo }}</td>
                <td class="px-2 py-2 whitespace-nowrap">
                    <div class="flex gap-2 items-center justify-end">
                        <a href="{{ path('product.owner.show', { id: product.id }) }}" class="py-2 px-3 font-medium text-purple-600 hover:text-purple-500 duration-150 hover:bg-gray-50 rounded-lg" rel="nofollow">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                        </a>
                        <a href="{{ path('product.edit', { id: product.id }) }}" class="py-2 px-3 font-medium text-purple-800 hover:text-purple-700 duration-150 hover:bg-gray-50 rounded-lg" rel="nofollow">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                            </svg>
                        </a>
                        {% if product.published %}
                                <i class="py-2 px-3 font-medium text-xs bg-green-200 text-green-600 rounded-lg">Public</i>
                                <a href="{{ path('product.publish', { id: product.id }) }}" title="Rendre invisible pour les clients en ligne" class="py-2 px-3 font-medium bg-red-600 text-white duration-150 hover:bg-red-500 rounded-lg" rel="nofollow">
                                Offline
                                </a>
                            {% else %}
                                <i class="py-2 px-3 font-medium text-xs bg-red-200 text-red-600 rounded-lg">Non public</i>
                                <a href="{{ path('product.publish', { id: product.id }) }}" title="Rendre visible pour les clients en ligne" class="py-2 px-3 font-medium bg-green-600 text-white duration-150 hover:bg-green-500 rounded-lg" rel="nofollow">
                                Publier
                                </a>
                        {% endif %}
                        
                        {{ include("product/_delete_form.html.twig") }}
                    </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        {% if products|length == 0 %}
          <div class="flex flex-col justify-center items-center p-4 gap-4">
            <p class="text-gray-500">Aucun produit trouvé</p>
            <a href="{{ path('product.add') }}" class="flex items-center w-auto p-2 bg-purple-800 hover:bg-purple-700 text-white rounded-lg dark:text-white dark:hover:bg-gray-700 group">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
              </svg>
              <span class="flex-1 ms-3 text-left rtl:text-right whitespace-nowrap">Ajouter un produit</span>
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
