{% extends 'base.html.twig' %}

{% form_theme form 'tailwind_2_layout.html.twig' %}

{% block title %}Edit Collecte{% endblock %}

{% block body %}
    
  <div class="customer-index flex min-h-full flex-col {{ app.user ? 'mt-12': '' }} justify-center mx-auto lg:px-8">
    <div class="max-w-screen-xl px-4 py-0 md:py-8 md:px-8">
      <div class="items-start {{ app.user ? 'ml-12': '' }} justify-between md:flex border-b pb-6 text-gray-600">
        <div class="max-w-lg">
            {% if app.user %}
                <h3 class="text-purple-800 text-xl font-bold sm:text-2xl">Modifier la collecte</h3>
                <p class="text-gray-500 mt-2">Ajoutez ou supprimer des pièces que vous avez ou n'avez pas ajouté par erreur, ou suite a un changement désiré par le client.</p>
                {% else %}
                <h3 class="text-purple-800 text-xl font-bold sm:text-2xl">Modifier la collecte avant de confirmer</h3>
                <p class="text-gray-500 mt-2">Vous pouvez ajouter autant de vêtement que necessaire a l'aide du boutton "Ajouter un vêtement"</p>
            {% endif %}
        </div>
        <div class="mt-3 md:mt-0">
            {% if app.user %}   
                <a href="{{ path('collecte.index') }}" class="inline-block px-4 py-2 text-white duration-150 font-medium border bg-gray-100 rounded-lg hover:bg-gray-200 active:bg-gray-300 md:text-sm" rel="nofollow">Retour</a>
            {% endif %}
        </div>
      </div>
        {{ include('collecte/_form.html.twig', {'button_label': 'Valider'}) }}
    </div>
  </div>
{% endblock %}
