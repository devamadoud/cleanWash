{% extends 'fullyAuthLayout.html.twig' %}

{% block title %}
  Collectes
{% endblock %}

{% block body %}
  <div class="customer-form items-center min-h-full lg:px-8">
    <div class="max-w-screen-xl px-4 py-0 md:py-4 md:px-8">
      <div class="items-start justify-between md:flex border-b pb-6 text-gray-600">
        <div class="max-w-lg">
          <h3 class="text-purple-800 text-xl font-semibold sm:text-2xl">Collectes</h3>
            <p class="text-gray-700 mt-2 text-sm font-semibold sm:text-md">Les detailles de la collecte, veillez renseigner le client le montant de la facture.</p>
        </div>
        <div class="mt-3 md:mt-0">
            <a href="{{ path('home') }}" class="inline-block px-4 py-2 mr-4 text-purple-700 duration-150 font-medium border bg-gray-100 rounded-lg hover:bg-gray-200 md:text-sm" rel="nofollow">Retour</a>
            <a href="{{ path('customer.collecte') }}" class="inline-block px-4 py-2 text-white duration-150 font-medium border bg-purple-700 rounded-lg hover:bg-purple-800 md:text-sm" rel="nofollow">Nouvelle collecte</a>
        </div>
      </div>
      <div class="lg:w-max mt-5 lg:px-8 lg:mx-auto">
        <div class="mt-5 shadow-sm border rounded-lg overflow-x-auto">
          <table class="w-full md:w-full table-auto text-sm text-left">
            <thead class="bg-gray-50 w-full text-purple-950 font-medium border-b">
              <tr>
                <th class="py-2 px-4">Client</th>
                <th class="py-2 px-4">Date</th>
                <th class="py-2 px-4">N.Pi√®ces</th>
                <th class="py-2 px-4">status</th>
                <th class="py-2 px-4"></th>
                <th class="py-2 px-4"></th>
              </tr>
            </thead>
            <tbody class="text-gray-600 divide-y bg-white">
              {% for collecteItem in collectes %}
                <tr>
                  <td class="px-4 py-2 text-ellipsis overflow-hidden">{{ collecteItem.customer.fullName }}</td>
                  <td class="px-4 py-2 whitespace-wrap">{{ collecteItem.collectedAt|format_datetime(locale = 'fr') }}</td>
                  <td class="px-4 py-2 whitespace-wrap">{{ collecteItem.collecteDetailles|length > 0 ? collecteItem.collecteDetailles|length: 'En Kg' }}</td>
                  <td class="px-4 py-2 whitespace-wrap">{{ collecteItem.status }}</td>
                  <td class="px-4 py-2 whitespace-wrap">
                    <a class="text-purple-700 text-sm" href="{{ path('collecte.show', { id: collecteItem.id }) }}">Detailles</a>
                  </td>
                  <td class="px-4 py-2 whitespace-wrap">
                    <a class="text-purple-700 text-sm" href="{{ path('collecte.edit', { id: collecteItem.id }) }}">Modifier</a>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td>Vous n'avez pas de collecte.</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
