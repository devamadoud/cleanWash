{% extends 'base.html.twig' %}

{% form_theme form 'tailwind_2_layout.html.twig' %}

{% block title %}
  New Collecte
{% endblock %}

{% block body %}
  <div class="customer-index flex min-h-full flex-col {{ app.user ? 'mt-12': '' }} justify-center mx-auto lg:px-8">
    <div class="max-w-screen-xl px-4 py-0 md:py-8 md:px-8">
      <div class="items-start justify-between md:flex border-b pb-6 text-gray-600">
        <div class="max-w-lg">
          <h3 class="text-purple-800 text-xl font-bold sm:text-2xl">Enregistrer une nouvelle collecte</h3>
          <p class="text-gray-500 mt-2">Vous pouvez ajouter autant de vêtement que necessaire a l'aide du boutton <span class="inline-block px-4 py-2 text-purple-700 duration-150 font-medium border bg-gray-100 rounded-lg hover:bg-gray-300 active:bg-gray-400 md:text-sm">"Ajouter un vêtement"</span></p>
        </div>
        {% if app.user %}
          <div class="mt-3 md:mt-0">
            <a href="{{ path('collecte.index') }}" class="inline-block px-4 py-2 text-white duration-150 font-medium border bg-gray-100 rounded-lg hover:bg-gray-300 active:bg-gray-400 md:text-sm" rel="nofollow">Retour</a>
          </div>
        {% endif %}
      </div>
        {{ include('collecte/_form.html.twig', {button_label: 'Suivant'}) }}
    </div>
  </div>
{% endblock %}
